{
  "name": "blocksuite",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "pnpm --filter @blocksuite/store serve",
    "dev": "run-p serve dev:playground",
    "dev:playground": "pnpm --filter @blocksuite/playground dev",
    "lint": "eslint ./ --max-warnings=0",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:store": "pnpm --filter @blocksuite/store test",
    "format": "prettier --write packages tests",
    "build": "pnpm -r build",
    "build:playground": "pnpm --filter @blocksuite/playground build",
    "clean": "rm -rf dist packages/{blocks,editor,playground,store}/dist",
    "changeset": "changeset",
    "release": "pnpm build && changeset publish",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{ts,tsx,js,jsx}": "npx eslint --cache --fix"
  },
  "keywords": [],
  "author": "toeverything",
  "license": "MPL-2.0",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@playwright/test": "^1.29.1",
    "@types/node": "^18.11.17",
    "@types/quill": "^1.3.7",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "@vitejs/plugin-react": "^3.0.0",
    "eslint": "^8.30.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "pretty-format": "^29.3.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vite-plugin-banner": "^0.7.0",
    "vitest": "^0.26.2"
  }
}
