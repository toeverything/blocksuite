{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "incremental": true,
    "composite": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-incompatible-type-binding": "off"
        }
      }
    ]
  },
  "files": [],
  "references": [
    {
      "path": "./packages/block-std"
    },
    {
      "path": "./packages/blocks"
    },
    {
      "path": "./packages/editor"
    },
    {
      "path": "./packages/playground"
    },
    {
      "path": "./packages/store"
    },
    {
      "path": "./packages/phasor"
    },
    {
      "path": "./packages/global"
    },
    {
      "path": "./packages/virgo"
    },
    {
      "path": "./tests"
    }
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
