{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      // Why? See https://github.com/DimensionDev/Maskbook/blob/2a042633c5bde18dd97a21d34e4943c8c4efa514/tsconfig.json#L33-L67
      "@blocksuite/editor": ["./packages/editor/src"],
      "@blocksuite/blocks": ["./packages/blocks/src"],
      "@blocksuite/blocks/*": ["./packages/blocks/src/*"],
      "@blocksuite/global/*": ["./packages/global/src/*"],
      "@blocksuite/store": ["./packages/store/src"],
      "@blocksuite/store/*": ["./packages/store/src/*"],
      "@blocksuite/phasor": ["./packages/phasor/src"],
      "@blocksuite/phasor/*": ["./packages/phasor/src/*"],
      "@blocksuite/virgo": ["./packages/virgo/src"],
      "@blocksuite/virgo/*": ["./packages/virgo/src/*"]
    },
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-incompatible-type-binding": "off"
        }
      }
    ]
  },
  "files": [],
  "references": [
    {
      "path": "./packages/blocks"
    },
    {
      "path": "./packages/editor"
    },
    {
      "path": "./packages/playground"
    },
    {
      "path": "./packages/store"
    },
    {
      "path": "./packages/phasor"
    },
    {
      "path": "./packages/global"
    },
    {
      "path": "./packages/virgo"
    },
    {
      "path": "./tests"
    }
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
