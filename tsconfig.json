// Ported from https://github.com/DimensionDev/aot-secure-ecmascript/blob/main/tsconfig.json
// Credits to [@Jack-works](https://github.com/Jack-Works)
{
  "compilerOptions": {
    "outDir": "./dist/",

    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    // Module
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Emit
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "importsNotUsedAsValues": "error",
    "noEmitOnError": true,
    "preserveValueImports": true,
    "sourceMap": true,

    // Interop Constraints
    "isolatedModules": true,

    // Language and Environment
    "jsx": "react",
    "lib": ["ESNext", "DOM"], // don't add "DOM", we use @types/web
    "target": "ESNext",
    // Note, setting useDefineForClassFields to `false` should only be required when the target is set to esnext or greater,
    // but it's recommended to explicitly ensure this setting is false.
    // See https://lit.dev/docs/tools/publishing/#compiling-with-typescript
    "useDefineForClassFields": false,
    "experimentalDecorators": true,

    // Projects
    "composite": true,

    // Completeness
    "skipLibCheck": true

    // "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "references": [
    { "path": "./packages/blocks" },
    { "path": "./packages/editor" },
    { "path": "./packages/shared" },
    { "path": "./packages/store" }
  ],

  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    // Workaround for custom element declare duplicate error
    // Subsequent property declarations must have the same type.  Property ''xxx-block-element'' must be of type 'XXXBlockElement', but here has type 'XXXBlockElement'.
    "**/*.d.ts"
  ]
}
